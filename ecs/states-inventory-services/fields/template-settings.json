{
    "index_patterns": [
        "wazuh-states-inventory-services*"
    ],
    "priority": 1,
    "template": {
        "settings": {
            "index": {
                "number_of_shards": "1",
                "number_of_replicas": "0",
                "auto_expand_replicas": "0-1",
                "refresh_interval": "2s",
                "query.default_field": [
                    "agent.host.architecture",
                    "agent.host.ip",
                    "agent.id",
                    "agent.name",
                    "agent.version",
                    "service.id",
                    "service.name",
                    "service.state",
                    "service.sub_state",
                    "service.description",
                    "service.state",
                    "service.exit_code",
                    "service.win32_exit_code",
                    "process.pid",
                    "process.executable",
                    "service.address",
                    "service.enabled",
                    "file.path",
                    "wazuh.cluster.name",
                    "wazuh.cluster.node",
                    "wazuh.schema.version",
                    "service.restart",
                    "service.frequency",
                    "service.inetd_compatibility",
                    "service.starts.on_mount",
                    "service.starts.on_path_modified",
                    "service.starts.on_not_empty_directory",
                    "log.file.path",
                    "error.log.file.path",
                    "process.args",
                    "process.working_directory",
                    "process.root_directory",
                    "process.user.name",
                    "process.group.name"
                ]
            }
        }
    }
}
